<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_message_loc_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/item_message_loc_title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item_message_loc_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_message_text_size"
            android:textColor="@color/chat_item_text"
            tools:text="Zbyszek sent you his location"/>

        <TextView
            android:id="@+id/item_message_loc_address"
            android:layout_width="wrap_content"
            tools:text="Zaolziańska 3a/2 Wrocław"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_message_loc_title"
            android:layout_toRightOf="@id/item_message_loc_icon"
            android:textColor="@color/chat_item_label"
            android:textSize="@dimen/item_message_label_text_size"/>
    </RelativeLayout>
</merge>